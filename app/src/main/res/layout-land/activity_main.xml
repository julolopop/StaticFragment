<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.usuario.staticfragment.MainActivity">

    <fragment
        android:id="@+id/fragmentA"
        android:name="com.example.usuario.staticfragment.AFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        tools:layout="@layout/fragment_a" />

    <fragment
        android:id="@+id/fragmentB"
        android:name="com.example.usuario.staticfragment.BFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        tools:layout="@layout/fragment_b" />

    <fragment
        android:id="@+id/fragmentC"
        android:name="com.example.usuario.staticfragment.CFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        tools:layout="@layout/fragment_c" />

</LinearLayout>
